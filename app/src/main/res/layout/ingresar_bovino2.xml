<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.pablosanjuan.core.IngresarBovino2">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:text="Proposito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Spinner
        android:id="@+id/spi_proposito"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:prompt="@string/spinner_proposito"/>
    <EditText
        android:id="@+id/edt_peso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Peso"
        android:inputType="textCapSentences|textImeMultiLine"/>
    <EditText
        android:id="@+id/edt_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Color"
        android:inputType="textCapSentences|textImeMultiLine"/>
    <EditText
        android:id="@+id/edt_raza"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Raza"
        android:inputType="textCapSentences|textImeMultiLine"/>
    <EditText
        android:id="@+id/edt_id_padre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ID Padre"
        android:inputType="textCapSentences|textImeMultiLine"/>
    <EditText
        android:id="@+id/edt_id_madre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ID Madre"
        android:inputType="textCapSentences|textImeMultiLine"/>
    <Button
        android:id="@+id/btn_guardar_Bovino"
        android:text="Guardar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"/>

</LinearLayout>
</ScrollView>
